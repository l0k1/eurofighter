	<animation>
		<type>material</type>
		<object-name>ReheatOuter</object-name>
		<object-name>ExternalFlame</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>sim/multiplay/generic/float[11]</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Engine1</object-name>
		<object-name>Engine2</object-name>
		<condition>
			<property>/engines/engine[0]/running</property>
			<equals>
				<property>/controls/switches/lp-cock-left</property>
				<value>1</value>
			</equals>
		</condition>
		<emission>
			<red>0.75</red>
			<green>0.0</green>
			<blue>0.0</blue>
			<factor-prop>sim/multiplay/generic/float[11]</factor-prop>
		</emission>
		<diffuse>
			<red>0.2</red>
			<green>0.1</green>
			<blue>0.1</blue>
		</diffuse>
	</animation>
