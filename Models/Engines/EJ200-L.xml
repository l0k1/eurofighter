<!-- engine animation -->
	<animation>
		<type>select</type>
		<object-name>Engine1</object-name>
		<condition>
				<greater-than>
					<property>engines/engine[0]/n1</property>
					<value>10</value>
				</greater-than>
		</condition>
	</animation>

	<animation>
		<type>spin</type>
		<object-name>Engine1</object-name>
		<condition>
				<equals>
					<property>/controls/switches/lp-cock-left</property>
					<value>1</value>
				</equals>
		</condition>
		<property>engines/engine[0]/rpm</property>
		<factor>-5</factor>
		<center>
			<x-m>-2.395</x-m>
			<y-m> 0.0000</y-m>
			<z-m> 0.0000</z-m>
		</center>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>ReheatInner</object-name>
		<object-name>ReheatOuter</object-name>
		<visible>false</visible>
	</animation>
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<condition>
			<property>/sim/rendering/rembrandt/enabled</property>
		</condition>
		<object-name>ReheatInner</object-name>
		<object-name>ReheatOuter</object-name>
		<object-name>ExternalFlame</object-name>
    </effect>

	<animation>
		<type>select</type>
		<object-name>ReheatInner</object-name>
		<object-name>ReheatOuter</object-name>
		<object-name>ExternalFlame</object-name>
		<condition>
			<greater-than>
				<property>sim/multiplay/generic/float[11]</property>
				<value>0.4</value>
			</greater-than>
			<equals>
				<property>/controls/switches/lp-cock-left</property>
				<value>1</value>
			</equals>
			<greater-than>
				<property>engines/engine[0]/rpm</property>
				<value>90</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>blend</type>
		<object-name>ExternalFlame</object-name>
		<property>sim/multiplay/generic/float[11]</property>
		<factor>-0.6</factor>
		<offset>1.0</offset>
		<min>0.0</min>
		<max>1.0</max>
	</animation>

	<animation>
		<type>scale</type>
		<object-name>ExternalFlame</object-name>
		<property>sim/multiplay/generic/float[11]</property>
		<x-min>0.2</x-min>
		<y-min>0.9</y-min>
		<z-min>0.9</z-min>
		<x-factor>1
		</x-factor>
		<y-factor>0.25</y-factor>
		<z-factor>0.25</z-factor>
	</animation>

	<animation>
        <type>spin</type>
		<object-name>ExternalFlame</object-name>
		
		<property>engines/engine[0]/n1</property>
		<factor>259</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.04</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

