<?xml version="1.0"?>
<PropertyList>

  <!-- dust -->
	<particlesystem>
		<name>ground</name>
		<type>normal</type>
		<texture>ground.png</texture>
		<condition>
			<and>
				<property>/gear/gear[0]/wow</property>
				<greater-than>
					<property>/gear/gear[0]/rollspeed-ms</property>
					<value>10</value>
				</greater-than>
			</and>
		</condition>
		<emissive>true</emissive>
		<lighting>true</lighting>
		<attach>local</attach>
		<placer>
			<type>point</type>
		</placer>
		<shooter>
			<theta-min-deg>-1.5</theta-min-deg>
			<theta-max-deg>1.5</theta-max-deg>
			<phi-min-deg>-1.5</phi-min-deg>
			<phi-max-deg>1.5</phi-max-deg>
			<speed-mps>
				<value>  2 </value>
				<spread> 0 </spread>
			</speed-mps>
			<rotation-speed>
				<x-min-deg-sec> 0 </x-min-deg-sec>
				<y-min-deg-sec> 0 </y-min-deg-sec>
				<z-min-deg-sec> 0 </z-min-deg-sec>
				<x-max-deg-sec> 0 </x-max-deg-sec>
				<y-max-deg-sec> 0 </y-max-deg-sec>
				<z-max-deg-sec> 0 </z-max-deg-sec>
			</rotation-speed>
		</shooter>
		<counter>
			<particles-per-sec>
				<value> 150 </value>
				<spread> 0 </spread>
			</particles-per-sec>
		</counter>
		<align>billboard</align>
		<particle>
			<start>
				<color>
					<red><value>   0.2 </value></red>
					<green><value> 0.2 </value></green>
					<blue><value>  0.2 </value></blue>
					<alpha><value> 0.2 </value></alpha>
				</color>
				<size>
					<value>0.01</value>
				</size>
			</start>
			<end>
				<color>
					<red><value>   0.8 </value></red>
					<green><value> 0.8 </value></green>
					<blue><value>  0.8 </value></blue>
					<alpha><value> 1.0 </value></alpha>
				</color>
				<size>
					<value>0.30</value>
				</size>
			</end>
			<life-sec>
				<value>0.10</value>
			</life-sec>
			<mass-kg>  0.25 </mass-kg>
			<radius-m> 1.00 </radius-m>
		</particle>
		<program>
			<fluid>    air </fluid>
			<gravity> true </gravity>
			<wind>   false </wind>
		</program>
	</particlesystem>
</PropertyList>